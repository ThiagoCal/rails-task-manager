<h2>Task Information</h2>

<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p>Created at: <%= @task.created_at %></p>

<%= link_to "Edit Task", edit_path(@task) %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Back to Tasks", tasks_path %>
